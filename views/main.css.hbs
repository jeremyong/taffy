body {
    font-family: "KaTeX_Size1", sans-serif;
    font-size: 18px;
    line-height: 1.5;
    height: 100%;
}

code {
    font-family: "Source Sans Pro", sans-serif;
    font-weight: 400;
}

p > code {
    font-weight: 600;
}

h3, h4, h5, h6 {
    font-weight: bold;
}

h3, h4, h5, h6 {
    margin-top: 35px;
}

h2 {
    margin-bottom: 40px;
}

.post-subtitle h2 p {
    font-weight: 200;
    font-size: 20px;
}

.katex {
    font-size: 1.1em;
}

.katex-block {
    max-width: 100vw;
    overflow-x: auto;
    font-size: 1.2em;
}

pre {
    font-family: "Source Sans Pro", sans-serif;
    max-width: 100vw;
    overflow-x: auto;
    box-shadow: 0 2px 2px 0 rgba(0, 0, 0, .15), 0 0 2px 0 rgba(0, 0, 0, .12);
    padding: 10px;
    border-radius: 4px;
    margin-top: 20px;
    margin-bottom: 20px;
}

.blog-title {
    margin-bottom: 60px;
}

.blog-title h1 {
    font-size: 4rem;
    line-height: 60px;
}

.post-header .blog-title {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 100px;
}

.post-header .blog-title .blog-name {
    font-size: 2rem;
    line-height: 80px;
}

.post-header .blog-title .blog-description {
    margin-left: 20px;
}

.post-header .blog-title .blog-description h2 {
    font-size: 1.75rem;
}

.post-summary {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin-bottom: 20px;
}

.post-summary-title a {
    font-size: 1.8rem;
    line-height: 38px;
    margin-right: 30px;
}

.post-summary-date {
    margin-right: 30px;
    font-family: "Source Sans Pro", sans-serif;
    font-size: 1rem;
}

.post-summary-subtitle {
    font-size: 1.2rem;
    padding-top: 12px;
}

.post-title {
    margin-top: 40px;
    margin-bottom: 20px;
}

.post-title .post-date {
    font-family: "Source Sans Pro", sans-serif;
    font-size: 1rem;
}

.post-title h1 {
    font-size: 4rem;
    line-height: 60px;
}

.post-author {
    margin-bottom: 60px;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.post-author .avatar {
    margin-right: 15px;
}

.post-author .avatar img {
    width: 60px;
    height: 60px;
}

.admonition {
    padding: 0;
    padding-bottom: 15px;
    border-radius: 4px;
    margin-left: auto;
    margin-right: auto;
    margin-top: 20px;
    margin-bottom: 20px;
    width: 95%;
}

.admonition > * {
    padding-right: 15px;
}

.admonition-title {
    display: flex;
    align-items: center;
    font-weight: bolder;
}

.admonition-title::before {
    font-family: "Material Icons";
    -webkit-font-smoothing: antialiased;
    margin-right: 10px;
    font-size: 26px;
}

.admonition p {
    padding-left: 10px;
    padding-right: 15px;
}

.admonition, .danger {
    border-left: .2rem solid #ff1744;
}

.danger .admonition-title {
    background-color: rgba(255, 23, 68, .1);
}

.danger .admonition-title::before {
    color: #ff1744;
    content: "warning";
}

.info {
    border-left: .2rem solid #448aff;
}

.info .admonition-title {
    background-color: rgba(0, 184, 212, .1);
}

.info .admonition-title::before {
    color: #448aff;
    content: "info";
}

.question {
    border-left: .2rem solid #64dd17;
}

.question .admonition-title {
    background-color: rgba(100, 221, 23, .1);
}

.question .admonition-title::before {
    color: #64dd17;
    content: "help";
}

.tip {
    border-left: .2rem solid #00bfa5;
}

.tip .admonition-title {
    background-color: rgba(0, 191, 165, .1);
}

.tip .admonition-title::before {
    color: #00bfa5;
    content: "local_fire_department";
}

.example {
    border-left: .2rem solid #ab47bc;
}

.example .admonition-title {
    background-color: rgba(223, 120, 239, .1);
}

.example .admonition-title::before {
    color: #ab47bc;
    content: "highlight";
}

.bug {
    border-left: .2rem solid #ff1744;
}

.bug .admonition-title {
    background-color: rgba(255, 23, 68, .1);
}

.bug .admonition-title::before {
    color: #ff1744;
    content: "bug_report";
}

.note {
    border-left: .2rem solid #ff5722;
}

.note .admonition-title {
    background-color: rgba(255, 138, 80, .1);
}

.note .admonition-title::before {
    color: #ff5722;
    content: "note";
}

.quote {
    border-left: .2rem solid #90a4ae;
}

.quote .admonition-title {
    background-color: rgba(193, 213, 224, .1);
}

.quote .admonition-title::before {
    color: #90a4ae;
    content: "format_quote";
}
